<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:layout_margin="10dp">


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txt1"
            android:inputType="numberDecimal"
            android:textSize="20sp"
            android:hint="Enter Number"
            android:layout_marginTop="20sp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/lr1"
            android:layout_below="@id/txt1"
            android:layout_marginTop="20sp"
            android:weightSum="4">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textSize="25sp"
                android:id="@+id/b1"
                android:layout_weight="1"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:textSize="25sp"
                android:id="@+id/b2"
                android:layout_weight="1"
                android:layout_marginLeft="10sp"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:textSize="25sp"
                android:id="@+id/b3"
                android:layout_weight="1"
                android:layout_marginLeft="10sp"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+"
                android:textSize="25sp"
                android:id="@+id/bplus"
                android:layout_weight="1"
                android:layout_marginLeft="10sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/lr2"
            android:layout_below="@id/lr1"
            android:layout_marginTop="20sp"
            android:weightSum="4">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4"
                android:textSize="25sp"
                android:id="@+id/b4"
                android:layout_weight="1"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:textSize="25sp"
                android:id="@+id/b5"
                android:layout_weight="1"
                android:layout_marginLeft="10sp"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6"
                android:textSize="25sp"
                android:id="@+id/b6"
                android:layout_weight="1"
                android:layout_marginLeft="10sp"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:textSize="25sp"
                android:id="@+id/bmin"
                android:layout_weight="1"
                android:layout_marginLeft="10sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/lr3"
            android:layout_below="@id/lr2"
            android:layout_marginTop="20sp"
            android:weightSum="4">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7"
                android:textSize="25sp"
                android:id="@+id/b7"
                android:layout_weight="1"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8"
                android:textSize="25sp"
                android:id="@+id/b8"
                android:layout_weight="1"
                android:layout_marginLeft="10sp"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9"
                android:textSize="25sp"
                android:id="@+id/b9"
                android:layout_weight="1"
                android:layout_marginLeft="10sp"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*"
                android:textSize="25sp"
                android:id="@+id/bmul"
                android:layout_weight="1"
                android:layout_marginLeft="10sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/lr4"
            android:layout_below="@id/lr3"
            android:layout_marginTop="20sp"
            android:weightSum="4">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="25sp"
                android:id="@+id/b0"
                android:layout_weight="1"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="."
                android:textSize="25sp"
                android:id="@+id/bdot"
                android:layout_weight="1"
                android:layout_marginLeft="10sp"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="="
                android:textSize="25sp"
                android:id="@+id/bans"
                android:layout_weight="1"
                android:layout_marginLeft="10sp"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/"
                android:textSize="25sp"
                android:id="@+id/bdiv"
                android:layout_weight="1"
                android:layout_marginLeft="10sp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/lr5"
            android:layout_below="@id/lr4"
            android:layout_marginTop="20sp"
            android:weightSum="2">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CLEAR"
                android:textSize="25sp"
                android:id="@+id/bclr"
                android:layout_weight="1"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EXIT"
                android:textSize="25sp"
                android:id="@+id/bext"
                android:layout_weight="1"
                android:layout_marginLeft="10sp"/>

        </LinearLayout>


    </RelativeLayout>
</ScrollView>